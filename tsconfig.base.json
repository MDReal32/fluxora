{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "jsx": "react-jsx",
    "moduleResolution": "Bundler",
    "noEmit": true,
    "downlevelIteration": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "baseUrl": ".",
    "paths": {
      "@fluxora/cli": ["libs/cli/src/main.ts"],
      "@fluxora/client": ["libs/client/src/main.ts"],
      "@fluxora/client/react/entry-client": ["libs/client/src/react/entry-client.ts"],
      "@fluxora/client/react/entry-server": ["libs/client/src/react/entry-server.ts"],
      "/@fluxora/client-server/react": ["libs/client/src/react/entry-server.ts"],
      "@fluxora/server": ["libs/server/src/main.ts"],
      "@fluxora/server/entry-dev": ["libs/server/src/entry-dev.ts"],
      "@fluxora/server/entry-prod": ["libs/server/src/entry-prod.ts"],
      "@fluxora/core": ["libs/core/src/main.ts"],
      "@fluxora/utils": ["libs/utils/src/main.ts"],

      // Imaginary Modules
      "/@fluxora/virtual/entry/*": ["libs/internal/src/*"]
    }
  }
}
