{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "jsx": "react-jsx",
    "moduleResolution": "Bundler",
    "noEmit": true,
    "downlevelIteration": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "noFallthroughCasesInSwitch": true,
    "baseUrl": ".",
    "paths": {
      "fluxora": ["./libs/fluxora/src/main.ts"],

      "@fluxora/framework-base": ["./libs/frameworks/base/src/main.ts"],
      "@fluxora/framework-react": ["./libs/frameworks/react/src/main.ts"],
      "@fluxora/framework-react/server": ["./libs/frameworks/react/src/server/main.ts"],
      "@fluxora/framework-react/vite": ["./libs/frameworks/react/src/vite.ts"],
      "@fluxora/framework-nestjs-client": ["./libs/frameworks/nestjs-client/src/main.ts"],

      "@fluxora/utils": ["./libs/core/utils/src/main.ts"],
      "@fluxora/cli-helper": ["./libs/core/cli-helper/src/main.ts"],
      "@fluxora/types": ["./libs/core/types/src/main.ts"],

      // Adapters
      "@fluxora/adapter-base": ["./libs/adapter/base/src/main.ts"],
      "@fluxora/adapter-express": ["./libs/adapter/express/src/main.ts"],

      "/__virtual__/*": ["./libs/internal/*"]
    }
  },
  "exclude": ["node_modules"]
}
